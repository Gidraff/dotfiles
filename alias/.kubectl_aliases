# Kubectl Aliases
alias kubectl="kubecolor"
alias k="kubectl"
alias kp="kubectl get pods"
alias kns="kubectl get namespaces"
alias kd="kubectl get deployments"
alias kno="kubectl get nodes"
alias ksvc="kubectl get svc"
alias ksts="kubectl get sts"
alias kdes="kubectl describe pods"
alias klo="kubectl logs"
alias knp="k get NetworkPolicy"
alias kcert="k get csr"
alias kcxt="kubectl config get-contexts ~/.kube/config"
alias ksc="kubectl get storageclass"
alias ksec="kubectl get secrets"
alias kenp="k get endpoints"
alias krq="k get resourcequota"
alias klr="k get limitrange"
alias kro="k get rs"
alias knl="k get nodes --show-labels"
alias kpw="kubectl get pod -o wide"
alias kpa="kubectl get all --all-namespaces"
alias knr="kubectl top node"
alias kcc="kubectl config current-context"
alias kpr="kubectl top pod"
alias kpf="kubectl port-forward"
